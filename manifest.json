{
    "manifest_version": 3,
    "name": "Content Highlighter and Notes",
    "version": "1.0",
    "description": "Highlight and save important content as notes.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "contextMenus"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }